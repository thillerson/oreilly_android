<?xml version="1.0" encoding="utf-8"?>
<com.oreilly.android.otweet.layouts.StatusListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<ImageView
	   	android:id="@+id/user_avatar"
	   	android:layout_width="48px"
	   	android:layout_height="48px"
	   	android:adjustViewBounds="true"
	   	android:layout_marginTop="6sp"
	   	android:layout_marginLeft="6sp" 
    	android:layout_marginRight="6sp" />
	<TextView
	   	android:id="@+id/status_user_name_text"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_marginTop="6dip"
	   	android:layout_marginBottom="6dip"
    	android:layout_toRightOf="@id/user_avatar"
    	style="@style/TextAppearance.Title" />
	<TextView
	   	android:id="@+id/status_text"
	   	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
    	android:layout_below="@+id/status_user_name_text"
    	android:layout_toRightOf="@id/user_avatar" 
    	android:paddingBottom="6sp" />
</com.oreilly.android.otweet.layouts.StatusListItem>
